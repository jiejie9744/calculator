.screen{
  position: fixed;
  top: 150rpx;
  word-wrap: break-word;
  width: 750rpx;
}
.screen view{
  color: #fff;
  font-size: 68px;
  text-align: right;
  padding-right: 80rpx;
  padding-bottom: 20rpx;
  font-weight: 300;
}

.btnGroup{
  display: flex;
  flex-direction: row;
}

.btn-item{
  color: #fff;
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  border-radius: 75rpx;
  font-size: 25px;
  margin-left: 25rpx;
  margin-bottom: 15rpx;
  margin-top: 5rpx;
  font-weight: 600;
}

.zero{
  width: 315rpx;
  text-align: left;
  padding-left: 60rpx;
}



.white{
