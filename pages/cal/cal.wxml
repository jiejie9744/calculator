  </view>

  <view class='btnGroup'>
    <button bindtap='clickButton' id="{{id5}}" hover-class='shadow' class='btn-item white'>7</button>
    <button bindtap='clickButton' id="{{id6}}" hover-class='shadow' class='btn-item white'>8</button>
    <button bindtap='clickButton' id="{{id7}}" hover-class='shadow' class='btn-item white'>
