    <button bindtap='clickButton' id="{{id13}}" hover-class='shadow' class='btn-item white'>1</button>
    <button bindtap='clickButton' id="{{id14}}" hover-class='shadow' class='btn-item white'>2</button>
    <button bindtap='clickButton' id="{{id15}}" hover-class='shadow' class='btn-item white'>
      3
    </button>
    <button bindtap='clickButton' id="{{id16}}" hover-class='shadow' class='btn-item orange'>+</button>
